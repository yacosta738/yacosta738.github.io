---
import { type Lang, localeParams } from "@/i18n";

export function getStaticPaths() {
	return localeParams;
}

const locale = Astro.params.lang as Lang;
---
<!doctype html>
<html lang={locale}>
  <head>
    <meta http-equiv="refresh" content={`0;url=/${locale}/blog`} />
    <title>Redirecting to blog...</title>
  </head>
  <body>
    <div style="display: flex; align-items: center; justify-content: center; min-height: 50vh;">
      <p>Redirecting to <a href={`/${locale}/blog`} style="color: blue; text-decoration: underline;">blog</a>...</p>
    </div>
  </body>
</html>
