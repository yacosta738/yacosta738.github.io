{
	"name": "portfolio",
	"version": "0.0.3",
	"packageManager": "pnpm@10.28.0",
	"type": "module",
	"scripts": {
		"astro": "astro",
		"build": "astro check && astro build",
		"build:fast": "astro build",
		"check": "run-p check:*",
		"check:a11y": "biome lint --only=a11y ./src",
		"check:astro": "astro check",
		"clean": "rimraf dist .astro coverage",
		"dev": "astro dev",
		"organize": "node ./scripts/organize-articles.js",
		"preview": "astro preview",
		"start": "astro dev",
		"deploy": "astro build",
		"test": "run-p test:unit test:e2e",
