---
/**
 * Publications section component.
 * This component renders a section displaying a timeline of publications.
 * It is only rendered if there are publications to display.
 *
 * @prop {Publication[]} [publications=[]] - An array of publication objects to display.
 */
import Section from "@atoms/Section.astro";
import PublicationTimeline from "@/components/organisms/PublicationTimeline.astro";
import type Publication from "@/core/resume/publication/publication.model";
import { type Lang, useTranslations } from "@/i18n";

interface Props {
	publications?: Publication[];
}

const { publications = [] } = Astro.props as Props;
const currentLocale = Astro.params.lang as Lang;
const t = useTranslations(currentLocale);
---

{publications.length > 0 && (
	<Section title={t('publications')}>
		<PublicationTimeline publications={publications} locale={currentLocale} />
	</Section>
)}
