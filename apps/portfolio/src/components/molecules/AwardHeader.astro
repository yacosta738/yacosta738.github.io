---
/**
 * AwardHeader component.
 * This component displays the header for an award, including the title,
 * the awarding organization, and an optional summary.
 *
 * @prop {string} title - The title of the award.
 * @prop {string} awarder - The name of the organization that gave the award.
 * @prop {string} [summary] - An optional summary or description of the award.
 */
interface Props {
	title: string;
	awarder: string;
	summary?: string;
}

const { title, awarder, summary } = Astro.props;
---

<div class="award-header">
  <h3 class="award-title">
    <span class="title-name">{title}</span>
  </h3>
  
  <div class="award-info">
    <p class="awarder">
      <span class="awarder-name">{awarder}</span>
    </p>
  </div>

  {summary && (
    <div class="summary">
      <p class="summary-description">{summary}</p>
    </div>
  )}
</div>

<style>
  .award-header {
    margin-bottom: 1.5rem;
  }

  .award-title {
    font-size: var(--fz-xl);
    font-weight: 500;
    color: var(--lightest-slate);
    margin: 0 0 8px 0;
  }

  .title-name {
    color: var(--green);
  }

  .award-info {
    margin-bottom: 12px;
  }

  .awarder {
    margin: 0 0 4px 0;
    color: var(--slate);
    font-size: var(--fz-md);
  }

  .awarder-name {
    font-weight: 500;
    color: var(--light-slate);
  }

  .summary {
    margin-top: 12px;
  }

  .summary-description {
    color: var(--slate);
    font-size: var(--fz-sm);
    line-height: 1.5;
    margin: 0;
  }

  /* CSS Variables */
  :root {
    --green: #64ffda;
    --navy: #0a192f;
    --light-navy: #112240;
    --lightest-navy: #233554;
    --slate: #8892b0;
    --light-slate: #a8b2d1;
    --lightest-slate: #ccd6f6;
    --white: #e6f1ff;
    --fz-xs: 13px;
    --fz-sm: 14px;
    --fz-md: 16px;
    --fz-lg: 18px;
    --fz-xl: 20px;
    --fz-xxl: 22px;
    --brand-accent: #10b981;
  }

  /* Dark mode variables */
  .dark {
    --green: var(--brand-accent);
    --navy: #0f172a;
    --light-navy: #1e293b;
    --lightest-navy: #334155;
    --slate: #64748b;
    --light-slate: #94a3b8;
    --lightest-slate: #e2e8f0;
    --white: #f8fafc;
  }
</style>