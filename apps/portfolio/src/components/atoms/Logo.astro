---
import type { HTMLAttributes } from "astro/types";
import { type Lang, useTranslatedPath, useTranslations } from "@/i18n";
import { cn } from "@/lib/utils";
import OptimizedPicture from "./OptimizedPicture.astro";

interface Props extends HTMLAttributes<"a"> {
	currentLocale: Lang;
}
const { class: className, currentLocale, ...attrs } = Astro.props as Props;
const lang = currentLocale;
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<a
	href={translatePath("/", lang)}
	class={cn("border-none flex items-center", className)}
	{...attrs}
	aria-label={t("nav.home") || "Go to homepage"}
>
	<OptimizedPicture
		src="/favicon.svg"
		class="w-10 h-10 transition-transform hover:scale-110"
		alt=""
		height="40"
		width="40"
		loading="eager"
		fetchpriority="high"
	/>
</a>
