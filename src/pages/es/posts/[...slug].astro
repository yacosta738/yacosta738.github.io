---
import i18next, { t, changeLanguage, setDefaultNamespace } from "i18next";
import { getCollection } from "astro:content";
import BlogPostTemplate from "../../../components/templates/BlogPostTemplate.astro";

changeLanguage("es");

export async function getStaticPaths() {
    const publishedBlogEntries = await getCollection("blog", ({ data }) => {
        return !data.draft && data.lang === i18next.language;
    });
    return publishedBlogEntries.map(entry => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}
const { entry } = Astro.props;
const { Content } = await entry.render();
setDefaultNamespace("blog");
---

<BlogPostTemplate post={entry}>
	<Content />
</BlogPostTemplate>
