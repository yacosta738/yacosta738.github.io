---
import WidgetWrapper from "molecules:WidgetWrapper";
import ToTop from "atoms:ToTop";
import BaseTemplate from "templates:BaseTemplate";

const { title, description, image, ogImageAlt, lang } = Astro.props;
---

<BaseTemplate
	title={title}
	description={description}
	image={image}
	ogImageAlt={ogImageAlt}
	lang={lang}
>
	<slot />
	<ToTop slot="footer" />
	<aside class="2xl:basis-1/3 xl:basic-1/3 lg:basis-1/2 sticky" slot="aside">
		<slot name="widget">
			<WidgetWrapper />
		</slot>
	</aside>
</BaseTemplate>
