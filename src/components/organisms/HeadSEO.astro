---
import { domain } from '@store:constants'
import { SEO } from 'astro-seo'
import { t } from 'i18next'
export interface Props {
	title: string
	description: string
	image: string
	ogImageAlt: string
}
const { href: canonicalUrl } = Astro.url
let { title, description, image, ogImageAlt } = Astro.props

title = title || t('seo.title')
description = description || t('seo.description')
image = image ? `${domain}${image}` : `${domain}/uploads/me.webp`
ogImageAlt = ogImageAlt || t('seo.ogImageAlt')
---

<link rel='icon' type='image/x-icon' href='/favicons/favicon.ico' />
<SEO
	title={title}
	description={description}
	canonical={canonicalUrl}
	openGraph={{
		basic: {
			title: t('seo.ogTitle'),
			type: 'website',
			image: image,
			url: canonicalUrl
		},
		optional: {
			description: t('seo.description')
		},
		image: {
			alt: ogImageAlt,
			width: 1200,
			height: 630,
			type: 'image/jpeg'
		}
	}}
	twitter={{ card: 'summary_large_image', creator: '@yacosta738' }}
/>

<script>
	document.addEventListener('DOMContentLoaded', function () {
		try {
			const isSafari = /^((?!chrome|android).)*safari/i.test(navigator.userAgent)
			if (!isSafari) {
				const imageUrl = window.location.origin + '/you-are-the-best.webp'
				console.log(
					'%cStop!',
					'color:#0a192f;font-family:system-ui;font-size:4rem;-webkit-text-stroke: 1px #64ffda;font-weight:bold'
				)
				const css = `padding:200px 0 0 0;text-align:bottom;font-size: 1.5rem;background:url(${imageUrl}) no-repeat left top;background-size:200px`
				console.log("%c So, you're reading the console messages - how geeky! ðŸ¤“", css)
			}
		} catch (error) {}
	})
	let previousTitle = document.title
	let titleTextAlt = { en: "Don't go! Come back! ðŸ˜¥", es: 'Â¡No te vayas! Â¡Vuelve! ðŸ˜¥' }

	window.addEventListener('blur', () => {
		setTimeout(() => {
			previousTitle = document.title
			document.title = titleTextAlt[document.documentElement.lang]
		}, 10000);
	})

	window.addEventListener('focus', () => {
		document.title = previousTitle
	})
</script>
