---
/**
 * WorkTimeline component.
 * This component renders a timeline of different positions held at the same company.
 * It is used by the `JobPanel` component when a person has multiple roles to display
 * for a single employer.
 *
 * @prop {Work[]} positions - An array of work experience objects for the same company.
 * @prop {string} company - The name of the company.
 * @prop {string} [companyUrl] - The URL of the company's website.
 * @prop {string} [location] - The location of the company.
 * @prop {Lang} locale - The locale to use for date formatting.
 * @prop {boolean} [showDates=true] - Whether to display the dates for each position.
 * @prop {"default" | "compact"} [variant="default"] - The visual variant of the timeline.
 */
import JobHeader from "@/components/molecules/JobHeader.astro";
import JobHighlights from "@/components/molecules/JobHighlights.astro";
import TimelineItem from "@/components/molecules/TimelineItem.astro";
import type Work from "@/core/resume/work/work.model";
import { type Lang } from "@/i18n";

interface Props {
	positions: Work[];
	company: string;
	companyUrl?: string;
	location?: string;
	locale: Lang;
	showDates?: boolean;
	variant?: "default" | "compact";
}

const {
	positions,
	company,
	companyUrl,
	location,
	locale,
	showDates = true,
	variant = "default",
} = Astro.props;
---

<div class="work-timeline" data-variant={variant}>
	{positions.map((position) => (
		<TimelineItem
			startDate={position.startDate}
			endDate={position.endDate}
			locale={locale}
			showDates={showDates}
			variant={variant}
		>
			<JobHeader
				position={position.position}
				company={company}
				companyUrl={companyUrl}
				location={location}
				startDate={position.startDate}
				endDate={position.endDate}
				locale={locale}
				showCompanyInTitle={false}
			/>
			<JobHighlights
				summary={position.summary}
				highlights={position.highlights}
			/>
		</TimelineItem>
	))}
</div>

<style>
	:root {
		--green: #64ffda;
		--navy: #0a192f;
		--light-navy: #112240;
		--lightest-navy: #233554;
		--slate: #8892b0;
		--light-slate: #a8b2d1;
		--lightest-slate: #ccd6f6;
		--white: #e6f1ff;
		--font-mono: 'SF Mono', 'Fira Code', 'Fira Mono', 'Roboto Mono', monospace;
		--font-sans: 'Calibre', 'Inter', 'San Francisco', 'SF Pro Text', -apple-system, system-ui, sans-serif;
		--fz-xs: 13px;
		--fz-sm: 14px;
		--fz-md: 16px;
		--fz-lg: 18px;
		--fz-xl: 20px;
		--fz-xxl: 22px;
		--brand-accent: #10b981;
	}

	/* Dark mode variables */
	.dark {
		--green: var(--brand-accent);
		--navy: #0f172a;
		--light-navy: #1e293b;
		--lightest-navy: #334155;
		--slate: #64748b;
		--light-slate: #94a3b8;
		--lightest-slate: #e2e8f0;
		--white: #f8fafc;
	}

	/* Work Timeline Styles */
	.work-timeline {
		position: relative;
		margin-top: 10px;
	}

	.timeline-item {
		display: grid;
		grid-template-columns: 120px 60px 1fr;
		gap: 0;
		margin-bottom: 30px;
		position: relative;
	}

	.timeline-item:last-child {
		margin-bottom: 0;
	}

	/* No dates variant */
	.work-timeline[data-variant="compact"] .timeline-item {
		grid-template-columns: 60px 1fr;
	}

	.work-timeline[data-variant="compact"] .timeline-date {
		display: none;
	}

	/* Timeline Date */
	.timeline-date {
		text-align: right;
		padding-right: 20px;
		color: var(--green);
		font-family: var(--font-mono);
		font-size: var(--fz-xs);
		font-weight: 600;
		line-height: 1.2;
	}

	.timeline-end-date {
		margin-top: 5px;
		font-size: 11px;
		opacity: 0.8;
	}

	/* Timeline Connector */
	.timeline-connector {
		position: relative;
		display: flex;
		justify-content: center;
		align-items: flex-start;
		padding-top: 5px;
	}

	.timeline-line {
		position: absolute;
		width: 2px;
		height: 100%;
	/* Subtle gradient to avoid reducing text contrast */
	background: linear-gradient(180deg, var(--green), rgba(100, 255, 218, 0.08));
		top: 0;
	}

	.timeline-dot {
		position: relative;
		z-index: 10;
		width: 12px;
		height: 12px;
		background: var(--green);
		border: 3px solid var(--navy);
		border-radius: 50%;
	box-shadow: 0 0 0 1px rgba(100, 255, 218, 0.12);
	}

	/* Timeline Content */
	.timeline-content {
		padding-left: 20px;
	}

	/* Light mode overrides for better contrast */
	html:not(.dark) .timeline-date {
		color: #0f172a; /* darker text for dates on light background */
		opacity: 0.9;
	}

	html:not(.dark) .timeline-line {
		background: linear-gradient(180deg, var(--green), rgba(100,255,218,0.12));
		opacity: 0.95;
	}

	html:not(.dark) .timeline-dot {
		background: var(--green);
		border-color: rgba(15,23,42,0.06);
		box-shadow: 0 0 0 1px rgba(100,255,218,0.12);
	}

	html:not(.dark) .timeline-content {
		border-left-color: rgba(100,255,218,0.12);
	}

	/* Compact Variant */
	.work-timeline[data-variant="compact"] .timeline-item {
		grid-template-columns: 60px 1fr;
	}

	.work-timeline[data-variant="compact"] .timeline-date {
		display: none;
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.timeline-item {
			grid-template-columns: 100px 40px 1fr;
		}

		.work-timeline[data-variant="compact"] .timeline-item {
			grid-template-columns: 40px 1fr;
		}

		.timeline-date {
			padding-right: 15px;
		}

		.timeline-content {
			padding-left: 15px;
		}
	}

	@media (max-width: 600px) {
		.timeline-item {
			grid-template-columns: 1fr;
			gap: 15px;
		}

		.timeline-date {
			text-align: left;
			padding-right: 0;
		}

		.timeline-connector {
			display: none;
		}

		.timeline-content {
			border-left: 3px solid var(--green);
			padding-left: 15px;
		}
	}

	@media (max-width: 480px) {
		.timeline-content {
			padding-left: 12px;
		}
	}
</style>