---
import VolunteerHeader from "@/components/atoms/VolunteerHeader.astro";
/**
 * VolunteerTimeline component.
 * This component renders a timeline of volunteer experiences by composing the
 * `TimelineItem` and `VolunteerHeader` components.
 *
 * @prop {Volunteer[]} volunteer - An array of volunteer experience objects to display.
 * @prop {Lang} locale - The locale to use for date formatting.
 */
import TimelineItem from "@/components/molecules/TimelineItem.astro";
import type Volunteer from "@/core/resume/volunteer/volunteer.model";
import { type Lang } from "@/i18n";

interface Props {
	volunteer: Volunteer[];
	locale: Lang;
}

const { volunteer, locale } = Astro.props;
---

<div class="volunteer-timeline">
  {volunteer.map((volunteerEntry) => (
    <TimelineItem
      startDate={volunteerEntry.startDate}
      endDate={volunteerEntry.endDate}
      locale={locale}
      showDates={true}
      variant="default"
    >
      <VolunteerHeader
        organization={volunteerEntry.organization}
        position={volunteerEntry.position}
        url={volunteerEntry.url}
        summary={volunteerEntry.summary}
        highlights={volunteerEntry.highlights}
      />
    </TimelineItem>
  ))}
</div>

<style>
  :root {
    --green: #64ffda;
    --navy: #0a192f;
    --light-navy: #112240;
    --lightest-navy: #233554;
    --slate: #8892b0;
    --light-slate: #a8b2d1;
    --lightest-slate: #ccd6f6;
    --white: #e6f1ff;
    --font-mono: 'SF Mono', 'Fira Code', 'Fira Mono', 'Roboto Mono', monospace;
    --font-sans: 'Calibre', 'Inter', 'San Francisco', 'SF Pro Text', -apple-system, system-ui, sans-serif;
    --fz-xs: 13px;
    --fz-sm: 14px;
    --fz-md: 16px;
    --fz-lg: 18px;
    --fz-xl: 20px;
    --fz-xxl: 22px;
    --brand-accent: #10b981;
  }

  /* Dark mode variables */
  .dark {
    --green: var(--brand-accent);
    --navy: #0f172a;
    --light-navy: #1e293b;
    --lightest-navy: #334155;
    --slate: #64748b;
    --light-slate: #94a3b8;
    --lightest-slate: #e2e8f0;
    --white: #f8fafc;
  }

  .volunteer-timeline {
    position: relative;
    margin-top: 10px;
  }
</style>