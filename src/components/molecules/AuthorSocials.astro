---
import ObfuscateEmail from "@/components/atoms/ObfuscateEmail.astro";
import SocialLinks from "@/components/molecules/SocialLinks.astro";
import type { Social } from "@/core/author";

interface Props {
	socials: Social[];
	email: string;
	className?: string;
}

const { socials, email, className = "mt-2" } = Astro.props;
---

<SocialLinks socials={socials} class={`flex items-center w-full max-w-fit gap-4 ${className}`}>
    {email && (<ObfuscateEmail email={email} />)}
</SocialLinks>

