---
/**
 * PublicationHeader component.
 * This component displays the header for a publication, including its name,
 * the publisher, an optional summary, and a link to the publication.
 *
 * @prop {string} name - The name of the publication.
 * @prop {string} publisher - The publisher of the work.
 * @prop {string} [summary] - A brief summary of the publication.
 * @prop {string} [url] - The URL to the publication.
 */
interface Props {
	name: string;
	publisher: string;
	summary?: string;
	url?: string;
}

const { name, publisher, summary, url } = Astro.props;
---

<div class="publication-header">
  <h3 class="publication-title">
    {url ? (
      <a href={url} class="publication-link" target="_blank" rel="noopener noreferrer">
        <span class="title-name">{name}</span>
      </a>
    ) : (
      <span class="title-name">{name}</span>
    )}
  </h3>
  
  <div class="publication-info">
    <p class="publisher">
      <span class="publisher-name">{publisher}</span>
    </p>
  </div>

  {summary && (
    <div class="summary">
      <p class="summary-description">{summary}</p>
    </div>
  )}
</div>

<style>
  .publication-header {
    margin-bottom: 1.5rem;
  }

  .publication-title {
    font-size: var(--fz-xl);
    font-weight: 500;
    color: var(--lightest-slate);
    margin: 0 0 8px 0;
  }

  .publication-link {
    text-decoration: none;
    color: inherit;
    transition: color 0.25s ease;
  }

  .publication-link:hover .title-name {
    color: var(--green);
  }

  .title-name {
    color: var(--green);
  }

  .publication-info {
    margin-bottom: 12px;
  }

  .publisher {
    margin: 0 0 4px 0;
    color: var(--slate);
    font-size: var(--fz-md);
  }

  .publisher-name {
    font-weight: 500;
    color: var(--light-slate);
  }

  .summary {
    margin-top: 12px;
  }

  .summary-description {
    color: var(--slate);
    font-size: var(--fz-sm);
    line-height: 1.5;
    margin: 0;
  }

  /* CSS Variables */
  :root {
    --green: #64ffda;
    --navy: #0a192f;
    --light-navy: #112240;
    --lightest-navy: #233554;
    --slate: #8892b0;
    --light-slate: #a8b2d1;
    --lightest-slate: #ccd6f6;
    --white: #e6f1ff;
    --fz-xs: 13px;
    --fz-sm: 14px;
    --fz-md: 16px;
    --fz-lg: 18px;
    --fz-xl: 20px;
    --fz-xxl: 22px;
    --brand-accent: #10b981;
  }

  /* Dark mode variables */
  .dark {
    --green: var(--brand-accent);
    --navy: #0f172a;
    --light-navy: #1e293b;
    --lightest-navy: #334155;
    --slate: #64748b;
    --light-slate: #94a3b8;
    --lightest-slate: #e2e8f0;
    --white: #f8fafc;
  }
</style>