{
	"name": "yuniel-acosta",
	"version": "0.0.1",
	"packageManager": "pnpm@10.18.2",
	"type": "module",
	"scripts": {
		"astro": "astro",
		"build": "astro check && astro build",
		"build:fast": "astro build",
		"check": "run-p check:*",
		"check:a11y": "biome lint --only=a11y ./src",
		"check:astro": "astro check",
		"check:biome": "biome check . --write",
		"clean": "rimraf dist .astro coverage",
		"dev": "npx @intellectronica/ruler apply && astro dev",
		"optimize:css": "node scripts/extract-critical-css.js",
		"organize": "node ./scripts/organize-articles.js",
		"precommit": "npx @intellectronica/ruler apply",
		"preinstall": "npx only-allow pnpm",
		"prepare": "npx @intellectronica/ruler apply && pnpm exec lefthook install",
		"preview": "astro preview",
		"ruler:apply": "npx @intellectronica/ruler apply",
		"ruler:check": "npx @intellectronica/ruler check",
		"semantic-release": "semantic-release",
	"start": "astro dev",
	"deploy": "astro build",
	"deploy:cloudflare": "DEPLOYMENT_ADAPTER=cloudflare astro build && wrangler deploy",
	"deploy:vercel": "DEPLOYMENT_ADAPTER=vercel astro build",
		"deploy:netlify": "DEPLOYMENT_ADAPTER=netlify astro build",
		"cf-typegen": "wrangler types",
		"test": "run-p test:unit test:e2e",
		"test:unit": "vitest",
		"test:e2e": "playwright test",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:chromium": "playwright test --project=chromium",
		"test:e2e:firefox": "playwright test --project=firefox",
		"test:e2e:webkit": "playwright test --project=webkit",
		"test:e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
		"test:e2e:report": "playwright show-report",
		"test:e2e:codegen": "playwright codegen http://localhost:4321",
		"update": "pnpm update",
		"update-deps": "pnpm update -i -r --latest",
		"update-interactive": "pnpm update --interactive"
	},
	"dependencies": {
		"@astrojs/check": "0.9.4",
		"@astrojs/mdx": "^4.3.7",
		"@astrojs/partytown": "^2.1.4",
		"@astrojs/rss": "^4.0.12",
		"@astrojs/sitemap": "^3.6.0",
		"@midudev/tailwind-animations": "^0.2.0",
		"@tailwindcss/vite": "^4.1.14",
		"astro": "5.14.3",
		"astro-compress": "2.3.8",
		"astro-pagefind": "^1.8.5",
		"mdast-util-to-string": "^4.0.0",
		"sharp": "^0.34.4",
		"tailwindcss": "^4.1.14",
		"typescript": "5.9.2",
		"unist-util-visit": "^5.0.0",
		"unpic": "^4.1.3"
	},
	"devDependencies": {
		"@astrojs/cloudflare": "catalog:",
		"@astrojs/netlify": "catalog:",
		"@astrojs/node": "catalog:",
		"@astrojs/vercel": "catalog:",
		"@biomejs/biome": "2.2.3",
		"@faker-js/faker": "^10.0.0",
		"@iconify-json/lucide": "^1.2.69",
		"@iconify-json/mdi": "^1.2.3",
		"@iconify-json/simple-icons": "^1.2.54",
		"@iconify-json/tabler": "^1.2.23",
		"@playwright/test": "1.56.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@tailwindcss/typography": "^0.5.19",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/preact": "^3.2.4",
		"@types/hast": "^3.0.4",
		"@types/mdast": "^4.0.4",
		"@vitest/coverage-v8": "^3.2.4",
		"astro-component-tester": "^0.8.0",
		"astro-icon": "^1.1.5",
		"clsx": "^2.1.1",
		"gray-matter": "^4.0.3",
		"happy-dom": "^18.0.1",
		"jsdom": "^27.0.0",
		"lefthook": "^1.13.6",
		"npm-run-all2": "^8.0.4",
		"preact-render-to-string": "^6.6.2",
		"reading-time": "^1.5.0",
		"rimraf": "^6.0.1",
		"satori": "0.2.3",
		"semantic-release": "^24.2.9",
		"tailwind-merge": "^3.3.1",
		"unified": "^11.0.5",
		"vfile": "^6.0.3",
		"vitest": "^3.2.4",
		"wrangler": "catalog:"
	}
}
