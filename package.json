{
	"name": "yacosta-portfolio-monorepo",
	"version": "0.0.0-development",
	"private": true,
	"packageManager": "pnpm@10.28.0",
	"scripts": {
		"dev": "pnpm -w run ruler:apply && pnpm --filter=./apps/* --parallel dev",
		"build": "pnpm --filter=./apps/* --parallel build",
		"test": "pnpm --filter=./apps/* test",
		"start": "pnpm --filter=./apps/* --parallel start",
		"deploy": "pnpm --filter=./apps/* --parallel deploy",
		"check:biome": "biome check . --write",
		"check": "pnpm run check:biome && pnpm --filter=./apps/* check",
		"precommit": "pnpm -w run ruler:apply",
		"preinstall": "npx only-allow pnpm",
		"prepare": "pnpm -w run ruler:apply && pnpm exec lefthook install",
		"ruler:apply": "npx @intellectronica/ruler apply",
		"ruler:check": "npx @intellectronica/ruler check",
		"semantic-release": "semantic-release",
		"update": "pnpm update",
		"update-deps": "pnpm update -i -r --latest",
		"update-interactive": "pnpm update --interactive",
		"test:unit": "pnpm --filter=./apps/* test:unit",
		"test:e2e": "pnpm --filter=./apps/* test:e2e"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@semantic-release/exec": "7.1.0",
		"@semantic-release/github": "12.0.2",
		"@semantic-release/npm": "13.1.3",
		"playwright": "1.57.0",
		"semantic-release": "^25.0.2",
		"vitest": "^4.0.16"
	}
}
