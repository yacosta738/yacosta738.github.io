{
	"name": "yacosta-portfolio-monorepo",
	"version": "0.0.0-development",
	"private": true,
	"packageManager": "pnpm@10.28.0",
	"scripts": {
		"dev": "pnpm -w run agents:apply && pnpm --filter=./apps/* --parallel dev",
		"build": "pnpm --filter=./apps/* --parallel build",
		"test": "pnpm --filter=./apps/* test",
		"start": "pnpm --filter=./apps/* --parallel start",
		"deploy": "pnpm --filter=./apps/* --parallel deploy",
		"lint": "pnpm run check:biome",
		"check:biome": "biome check . --write",
		"check": "pnpm run check:biome && pnpm --filter=./apps/* check",
		"precommit": "pnpm -w run agents:apply",
		"preinstall": "npx only-allow pnpm",
		"prepare": "pnpm -w run agents:apply && pnpm exec lefthook install",
		"agents:apply": "npx @dallay/agentsync apply",
		"agents:check": "npx @dallay/agentsync status",
		"semantic-release": "semantic-release",
		"update": "pnpm update",
		"update-deps": "pnpm update -i -r --latest",
		"update-interactive": "pnpm update --interactive",
		"test:unit": "pnpm --filter=./apps/* test:unit",
		"test:e2e": "pnpm --filter=./apps/* test:e2e",
		"cloudflare:check": "bash scripts/cloudflare-check.sh",
		"cloudflare:preview": "pnpm --filter=portfolio build && pnpm --filter=portfolio preview"
	},
	"devDependencies": {
		"@biomejs/biome": "2.4.4",
		"@semantic-release/exec": "7.1.0",
		"@semantic-release/github": "12.0.6",
		"@semantic-release/npm": "13.1.4",
		"playwright": "1.58.2",
		"semantic-release": "^25.0.3",
		"vitest": "^4.0.18"
	}
}
