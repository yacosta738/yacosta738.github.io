{
	"name": "yacosta-portfolio-monorepo",
	"version": "0.0.1",
	"private": true,
	"packageManager": "pnpm@10.30.1",
	"scripts": {
		"dev": "pnpm -w run agents:apply && pnpm --filter=portfolio --filter=blog --filter=yap-api --parallel dev",
		"dev:portfolio": "pnpm --filter=portfolio dev",
		"dev:blog": "pnpm --filter=blog dev",
		"dev:api": "pnpm --filter=yap-api dev",
		"build": "pnpm run build:apps",
		"build:apps": "pnpm --filter=portfolio --filter=blog --filter=yap-api --parallel build",
		"build:portfolio": "pnpm --filter=portfolio build",
		"build:blog": "pnpm --filter=blog build",
		"build:api": "pnpm --filter=yap-api build",
		"test": "pnpm run test:unit && pnpm run test:e2e",
		"start": "pnpm --filter=portfolio --filter=blog --filter=yap-api --parallel start",
		"start:portfolio": "pnpm --filter=portfolio start",
		"start:blog": "pnpm --filter=blog start",
		"start:api": "pnpm --filter=yap-api start",
		"preview": "pnpm --filter=portfolio --filter=blog --parallel preview",
		"preview:portfolio": "pnpm --filter=portfolio preview",
		"preview:blog": "pnpm --filter=blog preview",
		"deploy": "pnpm --filter=portfolio --filter=blog --filter=yap-api --parallel deploy",
		"deploy:portfolio": "pnpm --filter=portfolio deploy",
		"deploy:blog": "pnpm --filter=blog deploy",
		"deploy:api": "pnpm --filter=yap-api deploy",
		"lint": "pnpm run check:biome",
		"check:biome": "biome check . --write",
		"check": "pnpm run check:biome && pnpm run check:apps",
		"check:apps": "pnpm --filter=portfolio --filter=blog --filter=yap-api check",
		"check:portfolio": "pnpm --filter=portfolio check",
		"check:blog": "pnpm --filter=blog check",
		"check:api": "pnpm --filter=yap-api check",
		"precommit": "pnpm -w run agents:apply",
		"preinstall": "npx only-allow pnpm",
		"prepare": "pnpm -w run agents:apply && pnpm exec lefthook install",
		"agents:apply": "npx @dallay/agentsync apply",
		"agents:check": "npx @dallay/agentsync status",
		"semantic-release": "semantic-release",
		"update": "pnpm update",
		"update-deps": "pnpm update -i -r --latest",
		"update-interactive": "pnpm update --interactive",
		"test:unit": "pnpm --filter=portfolio --filter=blog --filter=yap-api test:unit",
		"test:unit:portfolio": "pnpm --filter=portfolio test:unit",
		"test:unit:blog": "pnpm --filter=blog test:unit",
		"test:unit:api": "pnpm --filter=yap-api test:unit",
		"test:e2e": "pnpm test:e2e:portfolio && pnpm test:e2e:blog",
		"test:e2e:portfolio": "pnpm --filter=portfolio test:e2e",
		"test:e2e:blog": "pnpm --filter=blog test:e2e",
		"cloudflare:check": "bash scripts/cloudflare-check.sh",
		"cloudflare:preview": "pnpm --filter=portfolio build && pnpm --filter=portfolio preview"
	},
	"devDependencies": {
		"@biomejs/biome": "2.4.4",
		"@semantic-release/exec": "7.1.0",
		"@semantic-release/github": "12.0.6",
		"@semantic-release/npm": "13.1.4",
		"playwright": "1.58.2",
		"semantic-release": "^25.0.3",
		"vitest": "^4.0.18"
	},
	"pnpm": {
		"overrides": {
			"fast-xml-parser": "^5.3.7",
			"h3": "^1.15.5"
		}
	}
}
